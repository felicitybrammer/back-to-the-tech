<article class="post rounded border bg-slate-50 shadow-sm flex flex-col p-5 mb-8">
  <div class="title pb-3">
    <a href="{{post_url}}" target="_blank" class="font-mono text-xl font-semibold text-slate-700">{{title}}</a>
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta font-mono text-sm text-slate-400 italic">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}" class="font-mono text-emerald-600 text-base pt-3">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

<article class="rounded border bg-slate-50 shadow-sm flex flex-col p-5 mb-8">
    <div class="pb-3">
        <h3 class="font-mono text-xl font-semibold text-slate-700">{{title}}</h3>
        <div class="flex flex-row justify-between px-1">
        <p class="font-mono text-sm text-slate-400 italic">by {{user.username}}</p>
        <p class="font-mono text-sm text-slate-400 italic">{{created_at}}</p>
        </div>
    </div>
    <p class="font-sans text-base text-slate-700">{{post_body}}</p>
    <a href='/post/{{id}}' class="font-mono text-emerald-600 text-base pt-3">{{comments.length}} Comments</a>
</article> 